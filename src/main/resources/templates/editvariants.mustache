        <input type="hidden" id="fio" name="fio" value="{{EDFIO}}">
        <h2 align="center" style="color: #2e2c91">Редактирование документов</h2>
        <button formaction="/pensedit" name="pereplats4" style="padding: 10px" id="addp"
                class="button button1" type="submit">Данные пенсионера
        </button>
        <button formaction="/add1edit" name="prfmistake1" style="padding: 10px" id="add1"
