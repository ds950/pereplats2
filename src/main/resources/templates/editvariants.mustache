<html>
<head>
    <link rel="stylesheet" href="../css/style.css">
    <script src="/js/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(
                function () {
                    // $("input").each(function() {
                    if ($("#mistaker").val() === "P") {
                        $('#add1').removeClass("button button1");
                        $('#add2').removeClass("button button1");
                        $('#add1').addClass("style1");
                        $('#add2').addClass("style1");
                    } else {
                        $('#add3').removeClass("button button1");
                        $('#add9').removeClass("button button1");
                        $('#add3').addClass("style1");
                        $('#add9').addClass("style1");
                    }
                });
